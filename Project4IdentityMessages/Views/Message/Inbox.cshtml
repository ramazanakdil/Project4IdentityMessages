@using Project4IdentityMessages_EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/IdentityLayout.cshtml";
}

<div class="container mt-4">
    <h3>Gelen Kutusu</h3>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Gönderen</th>
                <th>Konu</th>
                <th>Kategori</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.MessageId</td>
                    <td>@message.SenderMail</td>
                    <td>@message.Subject</td>
                    <td>@message.Category.CategoryName</td>
                    <td>@message.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>