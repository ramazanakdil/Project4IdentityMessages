@model RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/css/freepik__upload__53135.jpeg') no-repeat center center fixed;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .register-container {
            background: rgba(255, 255, 255, 0.9); 
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
        }

        .register-title {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
            color: #343a40;
        }

        .btn-primary {
            width: 100%;
            font-size: 16px;
        }

        .form-control {
            height: 45px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h3 class="register-title">Kayıt Ol</h3>
        <form method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Adınız</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Adınız" required />
            </div>
            <div class="mb-3">
                <label for="Surname" class="form-label">Soyadınız</label>
                <input type="text" class="form-control" id="Surname" asp-for="Surname" placeholder="Soyadınız" required />
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">E-Mail Adresiniz</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="E-Mail" required />
            </div>
            <div class="mb-3">
                <label for="ImageUrl" class="form-label">Görsel Bağlantınız</label>
                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl" placeholder="Görsel Bağlantısı" required />
            </div>
            <div class="mb-3">
                <label for="Username" class="form-label">Kullanıcı Adınız</label>
                <input type="text" class="form-control" id="Username" asp-for="Username" placeholder="Kullanıcı Adı" required />
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Şifreniz</label>
                <input type="password" class="form-control" id="Password" asp-for="Password" placeholder="Şifre" required />
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>

            <div class="text-primary" asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</body>
</html>
